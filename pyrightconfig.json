{
    "include": [
        "src"
    ],
    "exclude": [
        "**/node_modules",
        "**/build/**",
        "**/dist/**",
        "**/.venv/**",
        "**/.ruff_cache/**",
        "**/__pycache__",
        "src/typestubs"
    ],
    "ignore": [
        "**/examples"
    ],
    "stubPath": "/home/elyo/workspace/python/__stubs__/",
    "extraPaths": [
        "src",
        "plugins"
    ],
    "defineConstant": {
        "DEBUG": true
    },
    "reportMissingImports": "error",
    "useLibraryCodeForTypes": true,
    "executionEnvironments": [
        {
            "root": "src",
            "extraPaths": [
                "clients/**/plugins"
            ],
            "ignore": [
                "**/clients"
            ]
        }
    ]
}
